<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >
    <com.sanbong.custom_view.RoundedImageView
        android:id="@+id/match_image2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_chelsea"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_20sp"
        android:text="Chelsea FC"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_15sp"
        android:text="Keep the blue flag flying high"
        />
    </LinearLayout>
    <com.sanbong.custom_view.RoundedImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/img_vs"
        >

    </com.sanbong.custom_view.RoundedImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >
        <com.sanbong.custom_view.RoundedImageView
            android:id="@+id/match_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/logo_mu"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_20sp"
            android:text="Manchester Utd"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:textSize="@dimen/text_size_15sp"
            android:text="The Red devis"
            />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thông tin kèo bóng"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_20dp"
        android:textColor="@color/lightGreen"
        android:textSize="@dimen/text_size_20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="20dp">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_dollars"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/item_money"
            android:layout_width="wrap_content"
            android:text="250k, chia đôi"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/accent_material_light"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_clock"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_time"
            android:text="18h, ngày 28/12/2016"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/accent_material_light"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_stadium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_stadium"
            android:textSize="20sp"
            android:text="Sân bóng FECON"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/accent_material_light"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_location"
            />
        <TextView
            android:id="@+id/item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="144 Xuân Thủy, Cầu Giấy, Hà Nội"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/accent_material_light"
            android:clickable="true"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên hệ"
            android:textColor="@color/coloWhite"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorRed"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận kèo"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="center_vertical"
            android:background="@color/colorlightGreen"
            android:id="@+id/button"
            android:textColor="@color/coloWhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="70dp"
            />
    </RelativeLayout>

</LinearLayout>

</LinearLayout>
