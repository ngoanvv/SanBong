<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/border"
              android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="Sân bóng FECON"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:paddingBottom="10dp"
                  android:layout_marginTop="10dp">

     <LinearLayout
         android:layout_width="250dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_height="20dp">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="10dp"
            android:background="@drawable/ic_money"
            android:layout_gravity="center_vertical"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/item_money"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Mức giá "
            android:ellipsize="end"
            android:textSize="15sp"
            android:maxLines="3"
            android:lines="3"
            android:layout_marginLeft="10dp"
            android:textColor="@color/accent_material_light"
           />
    </LinearLayout>
     <LinearLayout
         android:layout_marginLeft="10dp"
         android:layout_width="230dp"
         android:layout_marginTop="5dp"
         android:orientation="horizontal"
         android:layout_height="wrap_content">
         <com.sanbong.custom_view.RoundedImageView
             android:layout_gravity="center_vertical"
             android:layout_width="10dp"
             android:background="@drawable/ic_location"
             android:layout_height="10dp"/>
         TextView
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:text="Địa chỉ"
             android:textSize="15sp"
             android:layout_marginLeft="10dp"
             android:layout_gravity="center_vertical"
             android:textColor="@color/colorBlack"
             />
         TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=":"
             android:textSize="15sp"
             android:layout_gravity="center_vertical"
             android:textColor="@color/accent_material_light"
             />
         <TextView
             android:id="@+id/item_location"
             android:layout_width="170dp"
             android:maxLines="2"
             android:textSize="15sp"
             android:text="144 Xuân Thủy, Cầu Giấy"
             android:layout_marginLeft="10dp"
             android:layout_gravity="center_vertical"
             android:textColor="@color/accent_material_light"
             android:layout_height="wrap_content"/>
     </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="250dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.sanbong.custom_view.RoundedImageView
            android:layout_width="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_manager"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/item_owner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Anh Hưng"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/accent_material_light"
            />
    </LinearLayout>


     <LinearLayout
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="5dp"
         android:layout_width="250dp"
         android:layout_marginTop="5dp"
         android:orientation="horizontal"
         android:layout_height="wrap_content">
         <com.sanbong.custom_view.RoundedImageView
             android:layout_gravity="center_vertical"
             android:layout_width="10dp"
             android:background="@drawable/ic_phone"
             android:layout_height="10dp"/>
         <TextView
             android:id="@+id/item_contact"
             android:layout_width="200dp"
             android:maxLines="2"
             android:textSize="15sp"
             android:text="0989891272"
             android:layout_marginLeft="10dp"
             android:layout_gravity="center_vertical"
             android:textColor="@color/accent_material_light"
             android:layout_height="wrap_content"/>
     </LinearLayout>
 </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:orientation="vertical"
       >
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/bt_readmore"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        fancy:fb_textSize="13dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#7ab800"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Xem thêm"
        fancy:fb_textColor="#FFFFFF"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/bt_booknow"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        fancy:fb_textSize="13dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorRed"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Đặt ngay"
        fancy:fb_textColor="#FFFFFF"
        />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



